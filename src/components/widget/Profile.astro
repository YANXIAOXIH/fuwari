---
import { Icon } from "astro-icon/components";
import { profileConfig } from "../../config";
import { url } from "../../utils/url-utils";
import ImageWrapper from "../misc/ImageWrapper.astro";

const config = profileConfig;

const brandColors: Record<string, string> = {
    "github": "#181717",
    "twitter": "#1DA1F2",
    "x": "#000000",
    "bilibili": "#00AEEC",
    "steam": "#000000",
    "instagram": "#d62976",
    "linkedin": "#0072b1",
    "whatsapp": "#25d366",
    "youtube": "#FF0000",
    "discord": "#5865F2",
    // 默认颜色（如果没有匹配到，就用这个，比如 Fuwari 主题色）
    "default": "var(--primary)" 
};

// 辅助函数：获取颜色
const getBrandColor = (name: string) => {
    const key = name.toLowerCase();
    return brandColors[key] || brandColors["default"];
};

---
<div class="card-base p-3">
    <a aria-label="Go to About Page" href={url('/about/')}
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <ImageWrapper src={config.avatar || ""} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{config.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="text-center text-neutral-400 mb-2.5 transition">{config.bio}</div>
        
        <div class="flex flex-wrap gap-3 justify-center mb-1">
            {config.links.map(item => (
                <a 
                    rel="me" 
                    aria-label={item.name} 
                    href={item.url} 
                    target="_blank" 
                    class="socialContainer"
                    style={`--hover-color: ${getBrandColor(item.name)}`}
                >
                    <Icon name={item.icon} class="socialSvg text-[1.2rem]"></Icon>
                </a>
            ))}
        </div>
    </div>
</div>

<style>
/* 基础样式：适配 Fuwari 的卡片风格 */
.socialContainer {
  width: 42px;
  height: 42px;
  background-color: var(--btn-regular-bg); /* 浅色模式默认背景 */
  color: var(--btn-content);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 0.5rem;
  transition-duration: 0.3s;
  position: relative;
}

/* 深色模式默认样式 */
/* 注意：这行代码定义了深色模式下，还没悬停时的样子（半透明灰色） */
:global(.dark) .socialContainer {
    background-color: rgba(255, 255, 255, 0.05);
}

/* 悬停效果 - 重点在这里 */
/* 我们同时选中“普通悬停”和“深色模式下的悬停”，强制让背景变色 */
.socialContainer:hover,
:global(.dark) .socialContainer:hover {
  background-color: var(--hover-color); /* 变成品牌颜色 */
  color: white; /* 图标变白 */
  transform: scale(1.2);
  border-radius: 10px;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

/* 鼠标按下的点击效果 */
.socialContainer:active {
  transform: scale(0.95);
  transition-duration: 0.3s;
}

/* 图标向上浮动的动画 */
.socialContainer:hover .socialSvg {
  animation: slide-in-top 0.3s both;
}

@keyframes slide-in-top {
  0% {
    transform: translateY(50px);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}
</style>
